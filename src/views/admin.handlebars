<h1>Bienvenido {{mainUser.first_name}}!</h1>

<!-- Resto de tu cÃ³digo Handlebars -->
<h2>Administrador de Usuarios</h2>

<div class="user-list">
    {{#if users}}
        {{#each users}}
            <div class="user-item">
                <h3>Email: {{this.email}}</h3>
                <p>Nombre y Apellido: <strong>{{this.first_name}} {{this.last_name}}</strong></p>
                <p>User ID: <strong>{{this._id}}</strong></p>
                <p>Rol: {{this.role}}</p>
                <form action="/api/users/updateUser" method="post">
                    <input type="hidden" name="_method" value="PUT">
                    <input type="hidden" name="uid" value="{{this._id}}">
                    <select name="role">
                        <option value="user">User</option>
                        <option value="premium">Premium</option>
                        <option value="admin">Admin</option>
                    </select>
                    <button type="submit">Actualizar rol</button>
                </form>
                <form action="/api/users/deleteUser" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="uid" value="{{this._id}}">
                    <button class="delete-button" type="submit">Eliminar Usuario</button>
                </form>
            </div>
        {{/each}}
    {{else}}
        <p>No hay usuarios para mostrar</p>
    {{/if}}
</div>