
<h1>Bienvenido, {{user.FullName}}</h1>
<div id="logout">
         <a href="/carts"><button id="cartIcon"><i class="bi bi-cart"></i></button></a>
         <a href="/profile" id="btn-profile"><button>Profile</button></a>
         <a href="/api/sessions/logout" id="btn-logout"><button>LogOut</button></a>
        
</div>
<h2>Nuestros productos</h2>
<div class="container-products">
    {{!-- Itera sobre los productos en el carrito y muestra la informaci√≥n --}}
    {{#each products.docs}}
    <div class="product-card">
        <h2>{{title}}</h2>
        <img src="{{image}}" alt="{{this.title}}" class="product-image">
        <p class="product-description">{{this.description}}</p>
        <p class="product-price">Precio: ${{this.price}}</p>
        <p class="product-stock">Stock: {{this.stock}}</p>

       <form action="/api/carts{{user.cart}}/products/{{this._id}}" method="post">
       <span>Cantidad:</span>
       <input class="quantity" type="number" name="quantity" value="1" min="1" max="{{stock}}">
    <input type="submit" value="Agregar al Carrito">
</form>
</div>
    {{/each}} 
</div>

<div id="pagination">
        <!-- Pagination -->
        {{#if products.hasPrevPage}}
            <a href="{{ products.prevLink }}">Anterior</a>
        {{/if}}
        {{#if products.hasNextPage}}
            <a href="{{ products.nextLink }}">Siguiente</a>
        {{else}}
            <p>No hay productos disponibles.</p>
        {{/if}}
    </div>

